#:kivy 1.9.2
<MainWid>:
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

<MenuScreen>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: .3,.3,.9
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: .6
    Button:
        size_hint_y: .1
        text: 'Agenda'
        on_press: root.create_database()
    Button:
        size_hint_y: .1
        text: 'Dia'
        #on_press: root.create_database()    
    BoxLayout:
        size_hint_y: .2

<DataWid>:
    data: ''
    data_id: ''
    canvas:
        Color:
            rgb: 0.2,0.2,0.2
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        size_hint_x: 0.85
        size_font: self.width*0.25
        text: root.data
    Button:
        size_hint_x: 0.15
        text: 'Editar'
        on_press: root.update_data(root.data_id)

<NewDataButton>:
    font_size: self.height*0.5
    text: '+'
    on_press: self.create_new_paciente()

<DataBaseWid>:
    canvas:
        Color:
            rgb: .3,.3,.9
        Rectangle:
            pos: self.pos
            size: self.size
    ScrollView:
        size: self.size
        GridLayout:
            id: container
            padding: [10,10,10,10]
            spacing: 5
            size_hint_y: None
            cols: 1
            row_default_height: root.height*0.15
            height: self.minimum_height

<LeftLabel@Label>:
    text_size: self.size
    halign: 'left'

<MessagePopup>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: message
            size_hint: 1,0.8
            text: ''
        Button:
            size_hint: 1,0.2
            text: 'Regresar'
            on_press: root.dismiss()

<InsertDataWid>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.2,0.2,0.2
        Rectangle:
            pos: self.pos
            size: self.size
    LeftLabel: # ---------- ID
        text: ' ID:'
    TextInput:
        id: ti_id
        multiline: False
        hint_text: 'ID'
    LeftLabel: # ---------- Nombre
        text: ' Nombre:'
    TextInput:
        id: ti_nombre
        multiline: False
        hint_text: 'Nombre'
    LeftLabel: # ---------- Apellido
        text: ' Apellido:'
    TextInput:
        id: ti_apellido
        multiline: False
        hint_text: 'Apellido'
    LeftLabel: # ---------- Telefono
        text: ' Telefono:'
    TextInput:
        id: ti_telefono
        multiline: False
        hint_text: 'Telefono'
    LeftLabel:  # ---------- Diagnostico
        text: ' Diagnostico:'
    TextInput:
        id: ti_diagnostico
        multiline: False
    LeftLabel:  # ---------- Mama
        text: ' Mama:'
    TextInput:
        id: ti_mama
        multiline: False    
    LeftLabel:  # ---------- Papa
        text: ' Papa:'
    TextInput:
        id: ti_papa
        multiline: False    
    BoxLayout:
        size_hint_y: 5
    BoxLayout: # ---------- Crear Salir
        Button:
            text: 'Crear'
            on_press: root.insert_data()
        Button:
            text: 'Salir'
            on_press: root.back_to_dbw()

<UpdateDataWid>:
    orientation: 'vertical'
    data_id: ''
    canvas:
        Color:
            rgb: 0.2,0.2,0.2
        Rectangle:
            pos: self.pos
            size: self.size
    LeftLabel: # ---------- ID
        text: ' ID: '+root.data_id
    LeftLabel: # ---------- Nombre
        text: ' Nombre:'
    TextInput:
        id: ti_nombre
        multiline: False
        hint_text: 'Nombre'
    LeftLabel: # ---------- Apellido
        text: ' Apellido:'
    TextInput:
        id: ti_apellido
        multiline: False
        hint_text: 'Apellido'
    LeftLabel: # ---------- Telefono
        text: ' Telefono:'
    TextInput:
        id: ti_telefono
        multiline: False
        hint_text: 'Telefono'
    LeftLabel:  # ---------- Diagnostico
        text: ' Diagnostico:'
    TextInput:
        id: ti_diagnostico
        multiline: False
    LeftLabel:  # ---------- Mama
        text: ' Mama:'
    TextInput:
        id: ti_mama
        multiline: False
    LeftLabel:  # ---------- Papa
        text: ' Papa:'
    TextInput:
        id: ti_papa
        multiline: False    
    BoxLayout:
        size_hint_y: 4
    BoxLayout:
        Button:
            text: 'Actualizar'
            on_press: root.update_data()
        Button:
            text: 'Eliminar'
            on_press: root.delete_data()
    Button: # ---------- Actualizar, Salir
        text: 'Salir'
        on_press: root.mainwid.goto_database()
